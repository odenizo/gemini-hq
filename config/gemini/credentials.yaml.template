# Gemini CLI Credentials Template
# Copy this file to credentials.yaml and fill in your API keys
# Never commit the actual credentials.yaml file to version control

api_keys:
  # Get your API key from: https://aistudio.google.com/app/apikey
  google_ai_studio: "YOUR_API_KEY_HERE"
  
  # For Google Cloud Platform users
  # gcp_service_account: "path/to/service-account.json"
  
auth:
  method: "api_key"  # Options: api_key, oauth, service_account
  
  # OAuth configuration (if using oauth method)
  oauth:
    client_id: "YOUR_CLIENT_ID"
    client_secret: "YOUR_CLIENT_SECRET"
    redirect_uri: "http://localhost:8080/callback"
    scopes:
      - "https://www.googleapis.com/auth/generative-language"
  
  # Service Account configuration (if using service_account method)
  service_account:
    key_file: "path/to/service-account.json"
    project_id: "your-project-id"

# Environment-specific configurations
environments:
  development:
    api_key: "${GEMINI_DEV_API_KEY}"
    debug: true
  
  staging:
    api_key: "${GEMINI_STAGING_API_KEY}"
    debug: false
  
  production:
    api_key: "${GEMINI_PROD_API_KEY}"
    debug: false
    rate_limit:
      requests_per_minute: 120

# Security settings
security:
  encrypt_credentials: true
  key_rotation_days: 90
  audit_log: true